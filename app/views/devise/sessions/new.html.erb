<%= image_tag("leaves.svg", class:"image-leaves") %>
<div class="sign-up-in-container">
  <h2>Sign in</h2>
  <p>Welcome back!</p>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs form-boxes">
      <%= f.input :email,
                  placeholder: "user@gmail.com",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class:"input-box" } %>
      <%= f.input :password,
                  placeholder: "******",
                  required: true,
                  input_html: { autocomplete: "current-password", class:"input-box" } %>
      <div class="d-flex">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class:"forgot-password" %><br />
        <% end %>
      </div>
    </div>

    <div class="form-actions btn-large">
      <%= f.button :submit, "Log in", class:"btn-text" %>
    </div>
  <% end %>

  <div class="sign-up-in-text">
    <p>Don't have an account yet?</p>
    <% if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up", new_registration_path(resource_name), class:"sign-text" %>
    <% end %>
  </div>
</div>
