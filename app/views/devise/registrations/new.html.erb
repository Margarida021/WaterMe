<%= image_tag("leaves.svg", class:"image-leaves") %>
<div class="sign-up-in-container">
  <h2>Sign up</h2>
  <p>Fill in all the necessary information</p>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs form-boxes">
      <%= f.input :name,
                  label: "Your name please",
                  placeholder: "Your Name",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "name", class:"input-box" }%>
      <%= f.input :email,
                  placeholder: "user@gmail.com",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class:"input-box" }%>
      <%= f.input :password,
                  placeholder: "******",
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class:"input-box" } %>
      <%= f.input :password_confirmation,
                  placeholder: "******",
                  required: true,
                  input_html: { autocomplete: "new-password", class:"input-box" } %>
    </div>
    <div class="form-actions btn-large">
      <%= f.button :submit, "Sign up", class:"btn-text" %>
    </div>
  <% end %>
  <div class="d-flex sign-up-in-text">
    <p>Already have an account?</p>
    <%= render "devise/shared/links" %>
  </div>
</div>
