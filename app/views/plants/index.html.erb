<h1><%= current_user.name %>'s Dashboard</h1>

<%# Search a plant by a keyword in our DB or photo api %>

<div class="form-search-results">

  <div class="form-search-plants">
    <%= form_with url: plants_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Type a keyword"
      %>
      <%# input a file here to search by photo %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>


  <div class="form-results-plants">
    <%= render "components/card_plant_search", plants: @plants %>
  </div>

</div>

<%# Display all  %>

<div>

  <% @plants.each do |plant| %>

    <%= image_tag plant.photo_url, style: "width: 300px"%>
    <h2>Plant Name:</h2>
    <p><%= plant.name %></p>
    <h2>Plant description:</h2>
    <p><%= plant.description %></p>
    <h2>Watering recommendation:</h2>
    <p><%= plant.watering %></p>
    <h2>Light recommendation:</h2>
    <p><%= plant.light_level %></p>

  <% end %>

</div>
