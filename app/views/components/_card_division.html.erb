<section class="m-4">
  <div class="d-flex justify-content-between">
    <h1 class="txt-division-name"><%= division.name %></h1>
    <%= link_to division_path(division.id) do %>
      <%= image_tag("icons/arrow-right.svg", alt: "arrow icon") %>
    <% end %>
  </div>

  <div class="row">
    <div class="col-4 p-1">
      <%= image_tag division.plants.sample.photo_url, alt: "plant image", class:"w-100 shadow-1-strong rounded mb-2 img-fixed-size-one" %>
      <%= image_tag division.plants.sample.photo_url, alt: "plant image", class:"w-100 shadow-1-strong rounded mb-2 img-fixed-size-two" %>
    </div>
    <div class="col-4 mb-2 p-1">
      <%= image_tag division.plants.sample.photo_url, alt: "plant image", class:"w-100 shadow-1-strong rounded mb-2 img-fixed-size-two" %>
      <%= image_tag division.plants.sample.photo_url, alt: "plant image", class:"w-100 shadow-1-strong rounded mb-2 img-fixed-size-one" %>
    </div>
    <div class="col-4 mb-2 p-1">
      <%= image_tag division.plants.sample.photo_url, alt: "plant image", class:"w-100 shadow-1-strong rounded mb-2 img-fixed-size-one" %>
      <%= image_tag division.plants.sample.photo_url, alt: "plant image", class:"w-100 shadow-1-strong rounded mb-4 img-fixed-size-two" %>
    </div>
  </div>
</section>
