<% plants.each do |plant| %>

  <div class="card-plant-search">

    <%= link_to plant_path(plant.id) do%>
      <div class="card-search-plant-photo" style="background-image: url(<%= image_tag plant.photo_url%>;">
      <%# put image as background better %>
        <%= image_tag plant.photo_url, style: "width: 300px"%>
      </div>

      <div class="card-search-plant-info">
        <h4><%= plant.name %></h4>
        <p><%= plant.scientific_name %></p>
      </div>
    <% end %>

    <div class="btn-add-plant-card-search">
      <%= link_to 'Add Plant!', new_plant_plant_division(plant.id) %>
    </div>

  </div>

<% end %>
