<div class="d-flex justify-content-between m-4">
  <%= link_to image_tag("icons/arrow-circle-left.svg") %>
  <%= link_to "skip", home_path, class:"skip" %>
</div>
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" style="height: 650px">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner" style="height: 600px">
    <div class="carousel-item active">
      <%= image_tag("image-1-onboarding.svg", alt: "image onboarding", class:"img-onboarding")%>
      <div class="carousel-caption-txt d-md-block">
        <div>
          <h5 class="tit">Organize your environment</h5>
          <p class="text">organize your space according to the divisions in your home.</p>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag("image-2-onboarding.svg", alt: "image onboarding", class:"img-onboarding")%>
      <div class="carousel-caption-txt d-md-block">
        <h5 class="tit">Organize your environment</h5>
        <p class="text">organize your space according to the divisions in your home.</p>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag("image-3-onboarding.svg", alt: "image onboarding", class:"img-onboarding")%>
      <div class="carousel-caption-txt d-md-block">
        <h5 class="tit">Organize your environment</h5>
        <p class="text">organize your space according to the divisions in your home.</p>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
