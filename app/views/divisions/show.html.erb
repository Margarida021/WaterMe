<%= image_tag("leaves.svg", class:"image-leaves") %>
<div class="divisions-container">
  <div class="d-flex">
    <%= link_to image_tag("icons/arrow-circle-left.svg"), divisions_path, class:"flex-grow-1" %>
    <%= link_to image_tag("icons/Edit.svg", class:"me-1"), edit_division_path%>
    <%= link_to image_tag("icons/trash.svg", class:"plant-division-icon-trash"), division_path(@division.id), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
  </div>

  <div class="divisions-top-details">
    <h2><%= @division.name %></h2>
    <p>All my plants in this room</p>
  </div>
  <% if @division.plant_divisions.any? %>
    <% @division.plant_divisions.each do |plant_division|%>
      <div class="division-details">
        <%= image_tag (plant_division.plant.photo_url) %>
        <div class="division-details-text">
          <h5><%= link_to plant_division.plant.name, plant_division_path(plant_division), class:"plant-name" %></h5>
          <p class="plant-scentific-name"><%= plant_division.plant.scientific_name %></p>
        </div>
      </div>
    <% end%>
  <% else %>
     <div class="divisions-home-details">
      <h5>You don't have any plants yet :(</h5>
      <%= image_tag ("plant.svg") %>
    </div>
  <% end %>
</div>
