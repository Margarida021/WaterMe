<div class="container">

<div class="d-flex flex-column justify-content-center ">
<h1>Pick a divison</h1>
<h3>You can change the divison specifications later</h3>
</div>


<div class="d-flex flex-column justify-content-center ">
<%= simple_form_for @division do |f| %>
 <%= f.input :name, label: 'Give a nickname to your division', hint: 'example: "Mom\'s room"' %>
  <%= f.input :category, as: :radio_buttons,
            collection_wrapper_tag: 'div',
            collection_wrapper_class: 'category-wrapper',
            item_wrapper_class: 'category-item',
            input_html: {class: 'category-selector'},
            collection: Division::CATEGORIES%>
   <%= f.input :light_direction, as: :radio_buttons,
            collection_wrapper_tag: 'div',
            collection_wrapper_class: 'category-wrapper',
            item_wrapper_class: 'category-item',
            input_html: {class: 'category-selector'},
            collection: Division::LIGHT_DIRECTIONS.keys %>
<%= f.button :submit , class: "btn btn-primary"%>

<% end %>
</div>

</div>
